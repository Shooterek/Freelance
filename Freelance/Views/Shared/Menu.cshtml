@using Freelance.Core.Models
@model Freelance.Core.Models.Announcement

<div class="spacer"></div>
<h4 class="bold">
    Umiejętności
</h4>

<div class="row">
    <div class="form-group col-sm-12">
        @Html.LabelFor(model => model.Localization, htmlAttributes: new { @class = "control-label col-md-2", @for = "localization"})
        @Html.EditorFor(model => model.Localization, new { htmlAttributes = new { @class = "form-control", id = "localization" } })
    </div>
</div>
<h4 class="bold">
    Wynagrodzenie
</h4>

<div class="row">
    <div class="form-group col-sm-12">
        <label class="control-label" for="min-wage">Minimalna stawka</label>
        <input class="form-control" id="min-wage" type="number" />
    </div>
</div>

<div class="row">
    <div class="form-group col-sm-12">
        <label class="control-label" for="max-wage">Maksymalna stawka</label>
        <input class="form-control" id="max-wage" type="number" />
    </div>
</div>

@(Html.CheckBoxListForEnum<Announcement, Availability>(m => m.Availability, new { @class = "availability-menu" }))
