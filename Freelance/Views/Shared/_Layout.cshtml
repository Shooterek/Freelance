<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:700&amp;subset=latin-ext" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid navbar-pad">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/Home/Index" class="navbar-brand">
                <img src="~/Content/Images/logo.png" alt="Company logo" width="150" height="50" />
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href=@Url.Action("Index", "Announcements", new {page = 1}) role="button" aria-haspopup="true" aria-expanded="false">Zatrudnij</a>
                    <ul class="dropdown-menu white-hover no-hover">
                        <li><a href=@Url.Action("Index", "Announcements", new {page = 1})>Przeglądaj ogłoszenia</a></li>
                        <li><a href=@Url.Action("Add", "Jobs")>Opublikuj zlecenie</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href=@Url.Action("Index", "Announcements", new {page = 1}) role="button" aria-haspopup="true" aria-expanded="false">Znajdź pracę</a>
                    <ul class="dropdown-menu white-hover no-hover">
                        <li><a href=@Url.Action("Index", "Jobs", new {page = 1})>Przeglądaj oferty</a></li>
                        <li><a href=@Url.Action("Add", "Announcements")>Opublikuj ogłoszenie</a></li>
                    </ul>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container-fluid">
    @RenderBody()  
</div>
<footer id="footer">
    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
</footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
